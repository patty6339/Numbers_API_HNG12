{
    "version": 2,
    "builds": [
        {
            "src": "app/main.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.10",
                "includeFiles": [
                    "app/**",
                    "requirements.txt"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/api/classify-number",
            "dest": "app/main.py"
        },
        {
            "src": "/",
            "dest": "app/main.py"
        },
        {
            "src": "/docs",
            "dest": "app/main.py"
        },
        {
            "src": "/redoc",
            "dest": "app/main.py"
        }
    ],
    "env": {
        "PYTHONUNBUFFERED": "1"
    }
}
